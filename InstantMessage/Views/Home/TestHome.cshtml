@model IEnumerable<InstantMessage.Models.Conversation>

@{
    ViewBag.Title = "View";
}

<h2>List of main conversations</h2>

<p>
    @Html.ActionLink("New Conversation", "CreateConversation", "Home")

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ConversationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ConversationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ConversationID })
        </td>
    </tr>

    }

</table>
